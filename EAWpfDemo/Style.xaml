<Mi:MiWindow x:Class="EAWpfDemo.Style"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Mi="clr-namespace:EAStyles.Controls.MiStyle;assembly=EAStyles"  
        mc:Ignorable="d"
        Title="风格" Height="300" Width="300" TitleLocation="Left"
             MinHeight="280" MinWidth="280" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Rectangle Margin="20,40" Fill="#FF565656" Grid.Column="0" Grid.Row="0" MouseUp="Rect_MouseUp"/>
        <Rectangle Margin="20,40" Fill="#FF6D809A" Grid.Column="0" Grid.Row="1" MouseUp="Rect_MouseUp"/>
        <Rectangle Margin="20,40" Fill="#FFE67979" Grid.Column="1" Grid.Row="0" MouseUp="Rect_MouseUp"/>
        <Rectangle Margin="20,40" Fill="#FF72255F" Grid.Column="1" Grid.Row="1" MouseUp="Rect_MouseUp"/>
    </Grid>
</Mi:MiWindow>
